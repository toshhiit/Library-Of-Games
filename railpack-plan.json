{
  "name": "library-of-games-fullstack",
  "build": {
    "image": "python:3.11-slim",
    "commands": [
      "apt-get update && apt-get install -y nodejs npm",
      "npm install",
      "npm run build",
      "python -m pip install --upgrade pip",
      "python -m pip install -r requirements.txt"
    ]
  },
  "start": {
    "command": "python server.py"
  },
  "env": [
    "BOT_TOKEN",
    "DATABASE_URL",
    "SITE_URL"
  ]
}